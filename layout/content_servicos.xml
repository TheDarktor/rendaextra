<?xml version="1.0" encoding="utf-8"?>

<ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="60dp"
            android:orientation="vertical"
            tools:context=".main_login">

        <ImageView android:layout_width="match_parent"
                   android:layout_height="125dp"
                   android:background="@drawable/vend1"
                   android:layout_marginTop="70dp"
        />
        
        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/viewPager"
                android:layout_marginBottom="5dp"
        />
        <Button
                android:text="SABER MAIS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_mais1"
                android:textColor="#0C86C8"
                android:background="#ffffff"
        />
        <Button
                android:text="CONTRATAR (70R$)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serv_cont1"
                android:textColor="#0C86C8"
                android:background="#ffffff"
        />

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/serv_cad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"
                app:backgroundTint="#0C86C8"
                app:srcCompat="@drawable/upload"
                tools:ignore="VectorDrawableCompat"/>


    </LinearLayout>
</ScrollView>