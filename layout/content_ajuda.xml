<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="50dp"
            android:orientation="vertical"
            tools:context=".main_login">

        <Button
                android:text="Como contratar um Serviço"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ajuda_cont"
                android:textColor="#ffffff"
                android:background="#0C86C8"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:gravity="start|center"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_white"
        />

        <Button
                android:text="Como publicar um Serviço"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ajuda_pub"
                android:textColor="#ffffff"
                android:background="#0C86C8"
                android:paddingLeft="10dp"
                android:gravity="start|center"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_white"/>

        <Button
                android:text="Como alterar Dados Pessoais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ajuda_dados"
                android:textColor="#ffffff"
                android:background="#0C86C8"
                android:paddingLeft="10dp"
                android:gravity="start|center"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_white"/>

        <Button
                android:text="Como contatar o Suporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ajuda_suporte"
                android:textColor="#ffffff"
                android:background="#0C86C8"
                android:paddingLeft="10dp"
                android:gravity="start|center"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_white"/>

    </LinearLayout>
</ScrollView>