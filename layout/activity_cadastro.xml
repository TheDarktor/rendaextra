<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C86C8">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            tools:context=".main_login">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/logobranca" />

        <EditText
                android:id="@+id/cad_login_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/linha_email_login"
                android:drawableLeft="@drawable/ic_action_person"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#F2FFFFFF"
                android:textColorHint="#70ffffff"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="286dp"/>

        <EditText
                android:id="@+id/cad_password_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/linha_email_login"
                android:drawableLeft="@drawable/ic_action_lock"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textColorHint="#70ffffff"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="343dp" />
        <Button
                android:text="Cadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cad_btn_register"
                android:textColor="#ffffff"
                android:background="@drawable/botao_customizado_1"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
        />
        <Button
                android:text="Voltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cad_btn_back"
                android:textColor="#0C86C8"
                android:background="@drawable/botao_customizado_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"/>


    </LinearLayout>
</ScrollView>