<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="50dp"
            android:orientation="vertical"
            tools:context=".main_login">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cad_perfil_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_action_account_circle"
        />

        <Button
                android:text="ALTERAR FOTO"
                android:textColor="#0C86C8"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cad_btn_perfil_photo"
                android:background="@drawable/botao_customizado_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"

        />
        <EditText
                android:id="@+id/cad_perfil_nome"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/linha_email_login_2"
                android:ems="10"
                android:hint="Nome"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:textColor="#F2FFFFFF"
                android:textColorHint="#990C86C8"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="286dp"/>

        <EditText
                android:id="@+id/cad_perfil_sobrenome"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/linha_email_login_2"
                android:ems="10"
                android:hint="Sobrenome"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="#990C86C8"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="343dp" />

        <EditText
                android:id="@+id/cad_perfil_phone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/linha_email_login_2"
                android:ems="10"
                android:hint="Telefone"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:textColorHint="#990C86C8"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="343dp" />
        <Button
                android:text="AvanÃ§ar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cad_btn_perfil_avancar"
                android:textColor="#0C86C8"
                android:background="@drawable/botao_customizado_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
        />


    </LinearLayout>
</ScrollView>